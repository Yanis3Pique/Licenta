@page
@model Licenta_v1.Areas.Identity.Pages.Account.ConfirmEmailModel
@{
    ViewData["Title"] = "Confirming Email";
}

<div class="text-center">
    <h1>Email Confirmation</h1>
    <p class="lead">Confirming your email address...</p>
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
</div>

<script>
	// Trimit userul la pagina de login dupa 2 secunde
    setTimeout(() => {
        window.location.href = '@Url.Page("/Account/Login", new { area = "Identity" })';
    }, 2000);
</script>
