@model IEnumerable<Licenta_v1.Models.Delivery>

@{
    ViewData["Title"] = "Deliveries";
}

<h2>Deliveries</h2>

<p>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="OptimizeAll" class="btn btn-primary">Optimize All Deliveries</a>
    }
    @if (User.IsInRole("Dispecer"))
    {
        <a asp-action="OptimizeRegion" class="btn btn-secondary">Optimize My Region</a>
    }
</p>

<table class="table">
    <thead>
        <tr>
            <th>Driver</th>
            <th>Vehicle</th>
            <th>Planned Start</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Driver?.UserName</td>
                <td>@item.Vehicle?.Model (@item.Vehicle?.RegistrationNumber)</td>
                <td>@item.PlannedStartDate.ToString("d")</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Show" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>