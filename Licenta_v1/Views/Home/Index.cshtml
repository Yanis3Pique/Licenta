@{
    ViewBag.Title = "Welcome to EcoDelivery";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4">@ViewBag.Title</h1>
        <p class="lead">Efficient, sustainable, and fast deliveries for a greener future.</p>
    </div>

    <!-- Primul rand -->
    <div class="row align-items-center mb-5">
        <div class="col-md-4">
            <img src="~/Images/Logistics-rafiki.png" alt="EcoDelivery Fleet" class="img-fluid rounded shadow-lg mb-5">
        </div>
        <br />
        <div class="col-md-6 text-center text-md-start">
            <h2 class="mb-3">Efficient Green Energy Fleet</h2>
            <p>Our cutting-edge fleet runs on renewable energy and optimized fuel systems, ensuring minimal environmental impact while guaranteeing timely deliveries.</p>
            <a class="btn btn-primary mt-3" asp-controller="Home" asp-action="LearnMore">Learn More</a>
        </div>
    </div>

    <!-- Al doilea rand -->
    <div class="row align-items-center mb-5 flex-md-row-reverse">
        <div class="col-md-4">
            <img src="~/Images/Delivery-address-amico.png" alt="Sustainable Packaging" class="img-fluid rounded shadow-lg mb-5">
        </div>
        <br />
        <div class="col-md-6 text-center text-md-start">
            <h2 class="mb-3">Optimized Delivery Routes</h2>
            <p>Our advanced routing technology reduces fuel consumption and emissions by identifying the fastest and most efficient delivery paths, saving time and resources.</p>
            <a class="btn btn-primary mt-3" asp-controller="Home" asp-action="GetStarted">Get Started</a>
        </div>
    </div>

    <!-- Al treilea rand -->
    <div class="row align-items-center mb-5">
        <div class="col-md-4">
            <img src="~/Images/New-entries-bro.png" alt="Join Our Team" class="img-fluid rounded shadow-lg mb-5">
        </div>
        <br />
        <div class="col-md-6 text-center text-md-start">
            <h2 class="mb-3">Committed to Sustainability</h2>
            <p>We are proud to use green energy solutions to power our operations. Every package delivered contributes to reducing carbon footprints and fostering a sustainable future.</p>
            <a class="btn btn-primary mt-3" asp-area="Identity" asp-page="/Account/Login">Join Us</a>
        </div>
    </div>

    <!-- Al patrulea rand -->
    <div class="row align-items-center mb-5 flex-md-row-reverse">
        <div class="col-md-4">
            <img src="~/Images/Delivery-pana.png" alt="Happy Users" class="img-fluid rounded shadow-lg mb-5">
        </div>
        <br />
        <div class="col-md-6 text-center text-md-start fst-italic">
            <h2 class="mb-3">What Do Our Users Say?</h2>

            @if (ViewBag.Feedbacks != null && ViewBag.Feedbacks.Count > 0)
            {
                @foreach (var feedback in ViewBag.Feedbacks)
                {
                    <p>"@feedback.Comment" - @feedback.Client.UserName (@feedback.Rating ★)</p>
                }
            }
            else
            {
                <p>No feedback available at this time.</p>
            }
        </div>
    </div>
</div>
