@model Licenta_v1.Models.ApplicationUser
@{
    ViewBag.Title = "User Details";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="container mt-5">
    <h2 class="text-center">@ViewBag.Title</h2>
    <br />

    <div class="row align-items-stretch">
        <!-- Poza :) -->
        <div class="col-lg-4 col-md-6 text-center mb-3 d-flex align-items-center">
            <img src="@(Url.Content("~/" + (Model.PhotoPath ?? "Images/Default.jpg")))"
                 class="img-fluid rounded"
                 alt="User Photo"
                 style="max-width: 100%; height: auto;">
        </div>

        <!-- Tabel cu date pt userrr -->
        <div class="col-lg-8 col-md-6 d-flex">
            <table class="table table-bordered table-striped align-self-stretch w-100">
                <tbody>
                    <tr>
                        <th>User Name</th>
                        <td>@Html.DisplayFor(model => model.UserName)</td>
                    </tr>
                    <tr>
                        <th>First Name</th>
                        <td>@Html.DisplayFor(model => model.FirstName)</td>
                    </tr>
                    <tr>
                        <th>Last Name</th>
                        <td>@Html.DisplayFor(model => model.LastName)</td>
                    </tr>
                    <tr>
                        <th>Home Address</th>
						<td>@Html.DisplayFor(model => model.HomeAddress)</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>@Html.DisplayFor(model => model.Email)</td>
                    </tr>
                    <tr>
                        <th>Phone Number</th>
                        <td>@Html.DisplayFor(model => model.PhoneNumber)</td>
                    </tr>
                    <tr>
                        <th>Region</th>
                        <td>@(Model.Region?.County ?? "N/A")</td>
                    </tr>
                    <tr>
                        <th>Date Hired</th>
                        <td>@(Model.DateHired.ToString("dd/MM/yyyy") ?? "N/A")</td>
                    </tr>
                    <tr>
						<th>Role</th>
                        <td>@ViewBag.UserRole</td>
                    </tr>
                    @if(ViewBag.UserRole == "Sofer"){
                        <tr>
                            <th>Average Rating</th>
                            <td>
                                <div class="rating">
                                    @for (int i = 0; i < (int)ViewBag.FullStars; i++)
                                    {
                                        <i class="bi bi-star-fill text-warning"></i> <!-- Stea full -->
                                    }

                                    @if ((bool)ViewBag.HalfStar)
                                    {
                                        <i class="bi bi-star-half text-warning"></i> <!-- Jumate de stea -->
                                    }

                                    @for (int i = 0; i < (int)ViewBag.EmptyStars; i++)
                                    {
                                        <i class="bi bi-star text-muted"></i> <!-- Stea goala -->
                                    }
                                </div>
                            </td>
                        </tr>
                    }
					@if (ViewBag.UserRole == "Dispecer" || ViewBag.UserRole == "Sofer")
					{
                        <tr>
                            <th>Notice of Termination</th>
                            <td>@(Model.DismissalNoticeDate.HasValue ? Model.DismissalNoticeDate.Value.ToString("dd/MM/yyyy") : "N/A")</td>
                        </tr>
					}
                </tbody>
            </table>
        </div>
    </div>

    <!-- Butoanele-s aci -->
    <div class="mt-4">
        <div class="d-flex flex-wrap justify-content-center align-items-center gap-3">
            <!-- Pt Admin -->
            @if (User.IsInRole("Admin") && !ViewBag.IsCurrentUserLoggedIn && ViewBag.UserRole != "Admin")
            {
                <div class="d-flex align-items-center gap-3">
                    <a href="@Url.Action("Edit", "Users", new { id = Model.Id })" class="btn btn-warning">Edit</a>

                    @if (ViewBag.UserRole == "Sofer" || ViewBag.UserRole == "Dispecer")
                    {
                        <form asp-action="IssuingNoticeTermination" asp-controller="Users" method="post" class="mb-0">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="btn btn-outline-danger">Emit NT30</button>
                        </form>
                    }

                    @using (Html.BeginForm("Delete", "Users", new { id = Model.Id }, FormMethod.Post, false, new { onsubmit = "return confirm('Are you sure you want to delete this user?');" }))
                    {
                        <button type="submit" class="btn btn-danger">Delete</button>
                    }
                </div>
            }

            <!-- Pt Dispecer -->
            @if (ViewBag.UserRole == "Sofer" && User.IsInRole("Admin"))
            {
                <div class="d-flex align-items-center gap-3 border border-3 border-dark rounded p-2">
                    <label for="dispatcherId" class="mb-0">Assign Dispatcher:</label>
                    <form id="dispatcherForm" asp-action="AssignDriverToDispatcherByRegionId" asp-controller="Users" method="post" class="mb-0">
                        <input type="hidden" name="driverId" value="@Model.Id" />
                        <select class="form-select w-auto" name="dispatcherId" id="dispatcherId"
                                onchange="document.getElementById('dispatcherForm').submit();">
                            <option value="">-- Select Dispatcher --</option>
                            @foreach (var dispatcher in ViewBag.Dispatchers)
                            {
                                <option value="@dispatcher.Value">@dispatcher.Text</option>
                            }
                        </select>
                    </form>
                </div>
            }
        </div>
    </div>
</div>


