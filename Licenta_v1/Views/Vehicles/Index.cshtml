@model IEnumerable<Licenta_v1.Models.Vehicle>
@{
    ViewBag.Title = "Vehicles";
}

<h2 class="text-center">Vehicles</h2>

<div class="card shadow-sm p-3 mb-4">
    <form method="get" class="row g-3 align-items-center">
        <!-- Filtrare dupa regiuni -->
        <div class="col-12 col-md-auto">
            <button type="submit" class="btn btn-primary w-100">Filter</button>
        </div>

        <!-- Bara de cautare -->
        <div class="col-12 col-md">
            <input type="text" name="searchString" value="@ViewBag.SearchString"
                   class="form-control"
                   placeholder="Search by Registration, Brand or Model" />
        </div>

        <!-- Dropdown cu regiuni -->
        <div class="col-md-3 col-sm-6">
            @Html.DropDownList("regionId",
                     ViewBag.Regions as SelectList,
                     "All Regions",
                     new { @class = "form-select" })
        </div>

        <!-- Buton de adaugat masini -->
        <div class="col-12 col-md-auto">
            <a class="btn btn-primary w-100" asp-area="" asp-controller="Vehicles" asp-action="Create">Add Vehicle</a>
        </div>
    </form>
</div>


<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewBag.RegistrationSortParam">Registration</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewBag.NameSortParam">Brand</a></th>
			<th><a asp-action="Index" asp-route-sortOrder="@ViewBag.ModelSortParam">Model</a></th>
            <th>Region</th>
			<th>Actions</th>
			<th>Year</th>
			<th>Status</th>
            <th>Fuel Type</th>
			<th>Consumption Rate</th>
			<th>Max Volume Capacity</th>
			<th>Max Weight Capacity</th>
			<th>Total Distance Traveled</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vehicle in Model)
        {
            <tr>
                <td>@vehicle.RegistrationNumber</td>
                <td>@vehicle.Brand</td>
                <td>@vehicle.Model</td>
                <td>@(vehicle.Region?.County ?? "N/A")</td>
                <td>
                    <a asp-action="Show" asp-route-id="@vehicle.Id" class="btn btn-sm btn-info">View</a>
                    <a asp-action="Edit" asp-route-id="@vehicle.Id" class="btn btn-sm btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-id="@vehicle.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this vehicle?');">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
				<td>@vehicle.YearOfManufacture</td>
                <td>@vehicle.Status.ToString()</td>
                <td>@vehicle.FuelType.ToString()</td>
                <td>@vehicle.ConsumptionRate</td>
				<td>@vehicle.MaxVolumeCapacity</td>
				<td>@vehicle.MaxWeightCapacity</td>
                <td>@vehicle.TotalDistanceTraveledKM KM</td>
            </tr>
        }
    </tbody>
</table>

<nav>
    <ul class="pagination justify-content-center">
        @{
            int totalPages = ViewBag.TotalPages;
            int pageNumber = ViewBag.PageNumber;
            string query = $"&searchString={ViewBag.SearchString}&regionId={ViewBag.RegionId}&sortOrder={ViewBag.CurrentSort}";
        }

        <li class="page-item @(pageNumber == 1 ? "disabled" : "")">
            <a class="page-link" href="?pageNumber=@(pageNumber - 1)@query" tabindex="-1">Previous</a>
        </li>

        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i == pageNumber ? "active" : "")">
                <a class="page-link" href="?pageNumber=@i@query">@i</a>
            </li>
        }

        <li class="page-item @(pageNumber == totalPages ? "disabled" : "")">
            <a class="page-link" href="?pageNumber=@(pageNumber + 1)@query">Next</a>
        </li>
    </ul>
</nav>